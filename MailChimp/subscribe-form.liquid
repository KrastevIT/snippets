<!-- Begin Mailchimp Signup Form -->
<div id="mc_embed_signup" class="newsletter">
  <form action="https://htmlbox.us1.list-manage.com/subscribe/post?u=435206251a3fe3874f79db2d6&amp;id=07ef07ad47" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
    {%- if form.posted_successfully? -%}
      <p>{{ 'newsletter.successfully' | t }}</p>

      <style>
        .subscribe .subscribe__inner,
        .subscribe .subscribe__controls {
          display: none;
        }
      </style>
    {% elsif form.errors %}
      <p>{{ 'newsletter.error' | t }}</p>
    {%- endif -%}

    <div id="mc_embed_signup_scroll"></div>

    <div class="newsletter__controls">
      <div class="mc-field-group">
        <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL"  placeholder="{{ 'newsletter.your_email' | t }}">
      </div>

      <div class="mc-field-group input-group">
        <ul>
          <li>
            <input type="checkbox" value="1" name="group[380426][1]" id="mce-group[380426]-380426-0">
            <label class="policy" for="mce-group[380426]-380426-0">{{ 'newsletter.policy' | t }}</label>
            <input type="submit" value="Iscriviti" name="subscribe" id="mc-embedded-subscribe" class="button btn">
          </li>
        </ul>
      </div>

      <div id="mce-responses" class="clear foot">
        <div class="response" id="mce-error-response" style="display:none"></div>
        <div class="response" id="mce-success-response" style="display:none"></div>
      </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_435206251a3fe3874f79db2d6_07ef07ad47" tabindex="-1" value=""></div>
    </div><!-- /.newsletter__controls -->
  </form>
</div>
